<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>whatWeDo</key>

    <view>templates/whatWeDo</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="en">what We Do</title>
        <title lang="de">what We Do</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="en">Resourcelocator</title>
                        <title lang="de">Adresse</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <block name="services" mandatory="true" default-type="service" minOccurs="1" maxOccurs="5">
            <meta>
                <title lang="en">Services</title>
            </meta>
            <types>
                <type name="service">
                    <meta>
                        <title lang="en">What we do</title>
                    </meta>
                    <properties>
                        <property name="title" type="text_line" mandatory="true">
                            <meta>
                                <title lang="en">Title</title>
                            </meta>
                        </property>
                        <property name="img_icon" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">icon in the circle</title>
                            </meta>
                        </property>
                        <property name="desc" type="text_editor" mandatory="true">
                            <meta>
                                <title lang="en">Desc below the circle icon</title>
                            </meta>
                        </property>
                        <property name="img_bottom" type="media_selection">
                            <meta>
                                <title lang="en">Images below the Desc(only need for copyright Managenment)</title>
                            </meta>
                        </property>
                        <property name="img_bk" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">image a half screen</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </block>



        <block name="slideshow1" mandatory="true" default-type="service" minOccurs="1">
            <meta>
                <title lang="en">Slide show 1</title>
            </meta>
            <types>
                <type name="service_slideshow1">
                    <meta>
                        <title lang="en">What we d</title>
                    </meta>
                    <properties>
                        <property name="media" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">media(media left)</title>
                            </meta>
                        </property>
                        <property name="logo" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">logo(logo in the right part)</title>
                            </meta>
                        </property>
                        <property name="desc" type="text_editor" mandatory="true">
                            <meta>
                                <title lang="en">Desc</title>
                            </meta>
                            <params>
                                <param name="styles_set" value='[
                               { "name": "Light Title", "element": "span", "attributes": {"class": "vox-light-title"} }
                               ]'/>
                                <param name="add_toolbar" value='[{"name":"styles"]}]' />
                            </params>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

        <block name="slideshow2" mandatory="true" default-type="service" minOccurs="1">
            <meta>
                <title lang="en">Slide show 2</title>
            </meta>
            <types>
                <type name="service_slideshow2">
                    <meta>
                        <title lang="en">What we did</title>
                    </meta>
                    <properties>
                        <property name="media" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">media(media left)</title>
                            </meta>
                        </property>
                        <property name="logo" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">logo(logo in the right part)</title>
                            </meta>
                        </property>
                        <property name="desc" type="text_editor" mandatory="true">
                            <meta>
                                <title lang="en">Desc</title>
                            </meta>
                            <params>
                                <param name="styles_set" value='[
                               { "name": "Light Title", "element": "span", "attributes": {"class": "vox-light-title"} }
                               ]'/>
                                <param name="add_toolbar" value='[{"name":"styles"]}]' />
                            </params>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

        <block name="slideshow3" mandatory="true" default-type="service" minOccurs="1">
            <meta>
                <title lang="en">Slide show 3</title>
            </meta>
            <types>
                <type name="service_slideshow3">
                    <meta>
                        <title lang="en">What we did</title>
                    </meta>
                    <properties>
                        <property name="media" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">media(media left)</title>
                            </meta>
                        </property>
                        <property name="logo" type="media_selection" mandatory="true">
                            <meta>
                                <title lang="en">logo(logo in the right part)</title>
                            </meta>
                        </property>
                        <property name="desc" type="text_editor" mandatory="true">
                            <meta>
                                <title lang="en">Desc</title>
                            </meta>
                            <params>
                                <param name="styles_set" value='[
                               { "name": "Light Title", "element": "span", "attributes": {"class": "vox-light-title"} }
                               ]'/>
                                <param name="add_toolbar" value='[{"name":"styles"]}]' />
                            </params>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

    </properties>
</template>
