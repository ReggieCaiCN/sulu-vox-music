{% extends "master.html.twig" %}

{% block meta %}
    {% autoescape false %}
        {{ sulu_seo(extension.seo, content, urls, shadowBaseLocale) }}
    {% endautoescape %}
{% endblock %}
{% block header %}{% endblock %}
{% block style %}
    <link rel="stylesheet" href="/css/whatWeDeliver.css">
{% endblock %}
{% block bodyAttr %}data-offset="97"{% endblock %}
{% block content %}
    <div class="page-menu">
        <div class="page-menu-container">
            {% for service in content.services %}
                <a class="page-menu-list" href="#page-menu-index{{ loop.index }}">{{ service.title }}</a>
            {% endfor%}
        </div>
    </div>
    <div class="deliver">
        <h1 property="title" class="vox-title">{{ content.title }}</h1>
        {% for service in content.services %}
            <div class="deliver-box {% if loop.index%2 ==1 %}deliver-bk{% endif %}" id="page-menu-index{{ loop.index }}">
                <div class="container deliver-container">
                    <div class="vox-title-second">
                        <span class="title-left-icon">/</span>{{ service.title }}
                    </div>
                    <div class="deliver-content">
                        {% if service.desc %}
                            <div class="vox-desc">
                                {{ service.desc|raw }}
                            </div>
                        {% endif %}
                        {% if service.img and service.img['0'] %}
                            <div class="row">
                                {% for img in service.img %}
                                    {% if img.url %}
                                            <div class="col-sm-4 text-center {% if loop.index==loop.last and loop.index%2 ==1 %}col-xs-12{% else %}col-xs-6{% endif %}">
                                                <div class="circle-icon">
                                                    <div class="img-box">
                                                        <img src="{{ img.url }}" class="img-responsive">
                                                    </div>
                                                </div>
                                                <div class="deliver-icon-desc">{{ img.description }}</div>
                                            </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
